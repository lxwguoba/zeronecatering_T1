<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fist_backgroud"
    android:id="@+id/layout">
    <com.dzck.ordersystem.view.MyVideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_fist_backgroud"
        android:layout_gravity="center"
        />
    <!-- 主题-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >
        <!-- 登陆-->
        <RelativeLayout
            android:id="@+id/guoba"
            android:layout_width="@dimen/x500"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="@dimen/x382"
                android:layout_height="@dimen/y437"
                android:layout_centerInParent="true"
                android:background="@drawable/login_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x76"
                    android:layout_height="@dimen/y76"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_logo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="智•POS联盟服务平台"
                    android:textColor="#fff"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y50"
                    android:layout_marginTop="@dimen/y25"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y40"
                        android:text="账号："
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="26sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:id="@+id/username"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/y40"
                            android:background="@null"
                            android:layout_gravity="center_vertical"
                            android:hint="请输入用户名"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x5"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_login_edit_line"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y50"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y40"
                        android:text="密码："
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="26sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="@dimen/x200"
                            android:layout_height="@dimen/y40"
                            android:background="@null"
                            android:layout_gravity="center_vertical"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/x5"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_login_edit_line"
                            />
                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y40"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    >
                    <CheckBox
                        android:id="@+id/rm_user"
                        android:layout_width="@dimen/y20"
                        android:layout_marginLeft="@dimen/x20"
                        android:button="@null"
                        android:background="@drawable/login_checked"
                        android:layout_height="@dimen/y20"
                        android:checked="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignTop="@id/rm_user"
                        android:layout_toRightOf="@id/rm_user"
                        android:layout_marginLeft="@dimen/y5"
                        android:layout_height="wrap_content"
                        android:text="记住账号"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        />

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="@dimen/x116"
                        android:layout_height="@dimen/y40"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/login_btn_bg"
                        android:text="登陆"
                        android:textColor="#fff"
                        android:textSize="22sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- 底部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="零壹新科技(深圳)有限公司版权所有"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>