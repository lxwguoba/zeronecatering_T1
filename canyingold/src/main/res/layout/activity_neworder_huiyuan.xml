<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/huiyuanxinxi_bg"
    >
    <!--标题展示 #34923E   @mipmap/huiyuanxinxi_header-->
    <RelativeLayout
        android:id="@+id/search_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y86"
        android:background="#34923E">

        <ImageView
            android:id="@+id/huiyuanxini_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x41"
            android:src="@mipmap/huiyuanxinxi_reture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会员信息"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/huiyuan_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x41"
            android:src="@mipmap/huiyuanxinxi_search" />

        <RelativeLayout
            android:id="@+id/serch_edit"
            android:layout_width="@dimen/x322"
            android:layout_height="@dimen/y38"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x41"
            android:background="@mipmap/search_edit"
            android:visibility="gone">

            <EditText
                android:id="@+id/serch_info"
                android:layout_width="@dimen/x276"
                android:layout_height="@dimen/y38"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="昵称/手机号"
                android:paddingLeft="@dimen/x15"
                android:textColor="#555555"
                android:textColorHint="#dadfe9"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@id/serch_info"
                android:src="@mipmap/search_small_icon" />
        </RelativeLayout>
    </RelativeLayout>
<!-- android:layout_width="@dimen/x1342"
