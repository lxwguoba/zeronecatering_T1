                android:background="#cecece" />

            <TextView
                android:layout_width="@dimen/x138"
                android:layout_height="match_parent"
                android:background="#34923E"
                android:gravity="center"
                android:text="积分"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="#cecece" />

            <TextView
                android:layout_width="@dimen/x138"
                android:layout_height="match_parent"
                android:background="#34923E"
                android:gravity="center"
                android:text="余额"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="#cecece" />

            <TextView
                android:layout_width="@dimen/x179"
                android:layout_height="match_parent"
                android:background="#34923E"
                android:gravity="center"
                android:text="备注"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="#cecece" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1182"
            android:layout_height="@dimen/y1"
            android:layout_gravity="center_horizontal"
            android:background="#cecece" />

        <!-- android:descendantFocusability="blocksDescendants"
        子类有点击事件时会产生事件冲突 所以这个属性是解决冲突的 现在的状态是子类的点击事件没用了-->
        <ListView
            android:id="@+id/huiyuan_listview"
            android:layout_width="@dimen/x1182"
            android:layout_height="@dimen/y372"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y25"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants" />
