<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/daipay_btn"
            style="@style/radiobutton_order"
            android:checked="true"
            android:text="待付款" />

        <RadioButton
            android:id="@+id/yifukuang_btn"
            style="@style/radiobutton_order"
            android:text="已付款" />


        <RadioButton
            android:id="@+id/daishouhuo_btn"
            style="@style/radiobutton_order"
            android:text="待收货" />

        <RadioButton
            android:id="@+id/wangcheng_btn"
            style="@style/radiobutton_order"
            android:text="已完成" />

        <RadioButton
            android:id="@+id/tuikuangzhong_btn"
            style="@style/radiobutton_order"
            android:text="退款中" />

        <RadioButton
            android:id="@+id/yiguanbi_btn"
            style="@style/radiobutton_order"
            android:text="已关闭"
            />
        <RadioButton
            android:id="@+id/allorder_btn"
            style="@style/radiobutton_order"
            android:text="全部订单" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
