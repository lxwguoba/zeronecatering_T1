<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#26333333"
    android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="500dp"
              android:layout_centerInParent="true"
              android:layout_height="191dp"
              android:background="@drawable/orderinfo_confirm_fahuo"
              android:orientation="vertical"
              >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="60dp">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="确认就餐"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="15dp"
                         android:textSize="18sp"
                         />
                  <ImageView
                      android:id="@+id/close_dialog"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="15dp"
                      android:src="@mipmap/close_dialog"
                      />
              </RelativeLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="#22000000"
                  />
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp">
                   <TextView
                       android:id="@+id/text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="15dp"
                       android:textSize="16sp"
                       android:text="预约就餐就餐码"
                       />

                   <EditText
                       android:id="@+id/checkWorker"
                       android:layout_width="160dp"
                       android:layout_height="30dp"
                       android:layout_toRightOf="@id/text"
                       android:layout_marginLeft="30dp"
                       android:background="@drawable/xianxia_edt_bg"
                       android:gravity="center_vertical"
                       android:maxLines="1"
                       android:ellipsize="end"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:textSize="16sp"
                       android:layout_centerVertical="true"
                       />
               </RelativeLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="#22000000"
                  />
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="60dp">

                  <Button
                      android:id="@+id/complete_confirm"
                      android:layout_width="120dp"
                      android:layout_height="30dp"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="15dp"
                      android:background="@drawable/order_details_update_btn"
                      android:text="确认就餐"
                      android:textColor="#fff"
                      android:textSize="14sp" />
                  <Button
                      android:id="@+id/complete_close"
                      android:layout_width="75dp"
                      android:layout_height="30dp"
                      android:text="关闭"
                      android:background="@drawable/orderinfo_confirm_fahuo_close"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="15dp"
                      android:textSize="14sp"
                      />
              </RelativeLayout>

          </LinearLayout>

     </RelativeLayout>

</LinearLayout>
