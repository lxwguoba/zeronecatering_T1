<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="订单信息"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#5c5c5c" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="收货姓名:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="分店坂田店的散客(买家昵称:分店坂田店的散客 ID:14686)"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="订单编号:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/p_order"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="1706010769284"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="下单时间:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/o_time"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="2017-06-01 19:41:41"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="交货方式:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/jiaohuofangshi"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="[现场订单]在 坂田店 当场带走"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="提成人员:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tichengrenyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="掌上宜商(ID:19682)"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="订单状态:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/orderstate"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/details_text_bg"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="代付款"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="买家留言:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/maijialiuyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="#EEEEEE"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="收货电话:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="13102127333"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="总金额:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="376元(地发呆发呆了法律对方答复)"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="收货地址:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/shouhuo_address"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="[现场交易]深圳市龙岗区龙城大道"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="支付方式:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/pay_state"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="现场现金支付，现场确认人ID:0"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="订单类型:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dingdanleixing"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="现场交易订单"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<TextView-->
                            <!--android:layout_width="100dp"-->
                            <!--android:layout_height="40dp"-->
                            <!--android:layout_marginLeft="25dp"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:text="改运费:"-->
                            <!--android:textSize="16sp" />-->

                        <!--<EditText-->
                            <!--android:id="@+id/yunfei_money"-->
                            <!--android:layout_width="120dp"-->
                            <!--android:layout_height="30dp"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:background="@drawable/xianxia_edt_bg"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:paddingLeft="15dp"-->
                            <!--android:text="0"-->
                            <!--android:textSize="16sp" />-->
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/xianxia_edt_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="ID"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"

                        android:text="商品标题"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="商品规格"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="商品ID号"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="商品条码"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="数量"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="成交单价"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="小计"
                        android:gravity="center"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="佣金(元/个)"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <!--<TextView-->
                        <!--android:layout_width="150dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--android:layout_marginBottom="5dp"-->
                        <!--android:text="改售价"-->
                        <!--android:textColor="#ff0000"-->
                        <!--android:textSize="14sp" />-->
                </LinearLayout>

                <ListView
                    android:id="@+id/p_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/submit_pay"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:background="@drawable/order_details_sure_btn"
                        android:text="确认退款" />

                    <!--android:background="@drawable/xianxia_submit_btn"-->
                    <!--android:text="返回开单"-->
                    <TextView
                        android:id="@+id/back_order"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                      />
                    <!--android:background="@drawable/xianxia_edt_bg"-->
                    <!--android:text="关闭订单"-->
                    <TextView
                        android:id="@+id/close_order"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/pay_state_text"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:gravity="center"

                        android:textColor="#ff0000" />

                    <TextView
                        android:id="@+id/pay_state_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/update_btn"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:background="@drawable/order_details_update_btn"
                        android:text="确认发货" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>