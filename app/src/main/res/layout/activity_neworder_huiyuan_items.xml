<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        >
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_num"
            android:layout_height="match_parent"
            android:textColor="#655b59"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_ID"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#655b59"
            android:gravity="center"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_name"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#655b59"
            android:gravity="center"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_phone"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#b57d4c"
            android:gravity="center"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />

        <TextView
            android:id="@+id/huiyuan_jifen"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#655b59"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_yue"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#b57d4c"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
        <TextView
            android:id="@+id/huiyuan_beizhu"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#655b59"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cecece"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cecece"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
